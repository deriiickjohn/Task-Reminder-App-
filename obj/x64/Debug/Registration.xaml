<Page
    x:Class="Assignment_2.Registration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="425" Height="800">

    <Grid>
        <StackPanel Margin="15">
            <TextBlock x:ConnectionId='2' x:Name="textBlockRegister" Text="Register" FontSize="40" FontWeight="SemiBold" />
            <TextBox x:ConnectionId='3' x:Name="textBoxFirstname" Style="{StaticResource RegisterTextBox}" PlaceholderText="First Name" />
            <TextBox x:ConnectionId='4' x:Name="textBoxLastname"  Style="{StaticResource RegisterTextBox}"  PlaceholderText="Last Name" />
            <TextBox x:ConnectionId='5' x:Name="textBoxUsername" Style="{StaticResource RegisterTextBox}" PlaceholderText="Username"  />
            <PasswordBox x:ConnectionId='6' x:Name="textBoxPassword" Style="{StaticResource Password}" PlaceholderText="Password" />
            <TextBox x:ConnectionId='7' x:Name="textBoxEmail" Style="{StaticResource RegisterTextBox}" PlaceholderText="Email" />
            <TextBox x:ConnectionId='8' x:Name="textBoxContact" Style="{StaticResource RegisterTextBox}" PlaceholderText="Contact" />
            <RadioButton Margin="8,15,0,0" Content="I Accept terms and conditions and privacy policy" FontSize="20" FontWeight="Thin"/>
            <RelativePanel Margin="0,20,0,0" >
                <Button x:ConnectionId='9' x:Name="buttonRegister"                              Margin="0,0,20,0" Content="Register" Width="180" FontSize="30" RelativePanel.LeftOf="buttonLogin" CornerRadius="25,25,25,25" Background="#FFFA1744" Foreground="AntiqueWhite" />
                <Button x:ConnectionId='10' x:Name="buttonLogin"                           Content="Login" Style="{StaticResource LoginButton}" />
            </RelativePanel>
        
        </StackPanel>
    </Grid>
</Page>

