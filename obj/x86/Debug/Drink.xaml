<Page
    x:Class="Assignment_2.Drink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFBCFFFE">
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='2' x:Name="timerTextBlock" Text="Drink" FontSize="40" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Image x:ConnectionId='3' x:Name="imageWater" Source="/Assets/drinkwater.gif" Width="500" Height="350" Grid.Row="1" Stretch="Uniform"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" >
            <ComboBox x:ConnectionId='4' x:Name="comboBox"                                                  Header="Remind me in:" Margin="0" Width="150" >

                <ComboBoxItem Content="15 secs"/>
                <ComboBoxItem Content="30 secs"/>
                <ComboBoxItem Content="1 min"/>
                <ComboBoxItem Content="5 mins"/>
                <ComboBoxItem Content="10 mins"/>
                <ComboBoxItem Content="20 mins"/>
                <ComboBoxItem Content="30 mins"/>
            </ComboBox>
            <Button x:ConnectionId='5' x:Name="startButton" Content="Start" Width="100" Margin="25,0,0,0"                          />

        </StackPanel>



    </Grid>
</Page>

