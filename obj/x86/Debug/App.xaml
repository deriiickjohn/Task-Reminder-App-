<Application
    x:Class="Assignment_2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment_2" RequestedTheme="Light" >

    <Application.Resources>
        <Style TargetType="TextBox" x:Key="RegisterTextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,3" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>

        <Style TargetType="PasswordBox" x:Key="Password">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,3" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>

        <Style TargetType="Button" x:Key="LoginButton">
            <Setter Property="Width" Value="130"/>
            <Setter Property="RelativePanel.AlignRightWithPanel" Value="True"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="30" />
            <Setter Property="CornerRadius" Value="25,25,25,25"/>
            <Setter Property="Background" Value="#FFC5C5C5"/>
        </Style>
    </Application.Resources>
</Application>

